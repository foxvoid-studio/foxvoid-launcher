{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://localhost:8000/*" },
        { "url": "http://127.0.0.1:8000/*" }
      ]
    }
  ]
}